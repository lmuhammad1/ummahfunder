<h1><%= pluralize(@projects.size, 'Project') %></h1>

<% @projects.each do |project| %>
  <article>
    <header><h2> <%= project.name %> </h2> </header>
    <p> <%= project.description.truncate(150, separator: ' ') %> </p>

    <table>
      <tr>
        <th>Pledge Amount: </th>
        <td><%= number_to_currency project.target_pledge_amount %> </td>
      </tr>
      <tr>
        <th>Website: </th>
        <td><%= project.website %> </td>
      </tr>
      <tr>
        <th>Deadline: </th>
        <td><%= days_remaining(project) %> </td>
      </tr>
    </table>
  </article>
<% end %>


